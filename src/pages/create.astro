---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import xValues from '../data/x-values.json';
import yValues from '../data/y-values.json';

// Sort values alphabetically for better UX
const sortedXValues = [...xValues].sort((a, b) => a.activity.localeCompare(b.activity));
const sortedYValues = [...yValues].sort((a, b) => a.concept.localeCompare(b.concept));

const title = "Create Your Own Post | X about Y";
const description = "Choose your own absurd activity and business concept combination to generate a hilarious LinkedIn parody post.";
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-6">
      <a href="/" class="text-blue-600 hover:underline inline-flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to home
      </a>
    </div>

    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold mb-2">Create Your Own Post</h1>
      <p class="text-lg mb-6">Select an absurd activity and a business concept to generate a custom LinkedIn parody post.</p>
    </div>

    <form id="create-form" class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-8">
      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
          <label for="x-select" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
            Select an Activity (X)
          </label>
          <div class="relative">
            <select 
              id="x-select" 
              name="x" 
              class="block w-full bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              required
            >
              <option value="" disabled selected>Choose an activity...</option>
              {sortedXValues.map((x) => (
                <option value={x.id}>{x.activity}</option>
              ))}
            </select>
          </div>
        </div>
        
        <div>
          <label for="y-select" class="block text-gray-700 dark:text-gray-300 font-medium mb-2">
            Select a Business Concept (Y)
          </label>
          <div class="relative">
            <select 
              id="y-select" 
              name="y" 
              class="block w-full bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              required
            >
              <option value="" disabled selected>Choose a concept...</option>
              {sortedYValues.map((y) => (
                <option value={y.id}>{y.concept}</option>
              ))}
            </select>
          </div>
        </div>
      </div>
      
      <div class="flex justify-center">
        <Button type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
          </svg>
          Generate Post
        </Button>
      </div>
    </form>
    
    <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-6">
      <h2 class="text-xl font-bold mb-4">Daily Generation Limit</h2>
      <p class="mb-4">To keep our service running smoothly, we limit the number of new AI-generated posts each day. If you request a combination that's already been generated before, it won't count against this limit.</p>
      <p>If you're hitting the generation limit, try choosing from our pre-generated posts or come back tomorrow!</p>
    </div>
  </div>
</Layout>

<script>
  // Handle form submission
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('create-form');
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const xSelect = document.getElementById('x-select') as HTMLSelectElement;
      const ySelect = document.getElementById('y-select') as HTMLSelectElement;
      
      const xValue = xSelect.value;
      const yValue = ySelect.value;
      
      if (xValue && yValue) {
        // Redirect to the post page
        window.location.href = `/post/${xValue}/${yValue}`;
      }
    });
  });
</script> 