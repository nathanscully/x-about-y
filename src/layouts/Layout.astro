---

import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: URL | string;
  type?: 'website' | 'article';
  post?: {
    xId: string;
    yId: string;
    title: string;
    content: string;
  };
}

const {
  title,
  description,
  image = '/social-image.jpg',
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  type = 'website',
  post,
} = Astro.props;

// Compute social media sharing title and description
const socialTitle = post ? `What ${post.title}` : title;
const socialDescription = post ? post.content.substring(0, 160) + '...' : description;

// Compute canonical URL
const resolvedCanonicalURL = canonicalURL instanceof URL 
  ? canonicalURL 
  : new URL(canonicalURL, Astro.site);

// LinkedIn sharing URL
const linkedinShareUrl = post 
  ? `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(resolvedCanonicalURL.toString())}&title=${encodeURIComponent(socialTitle)}`
  : `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(resolvedCanonicalURL.toString())}`;
---
<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={resolvedCanonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={resolvedCanonicalURL} />
    <meta property="og:title" content={socialTitle} />
    <meta property="og:description" content={socialDescription} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={resolvedCanonicalURL} />
    <meta property="twitter:title" content={socialTitle} />
    <meta property="twitter:description" content={socialDescription} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- LinkedIn specific -->
    <meta property="linkedin:title" content={socialTitle} />
    <meta property="linkedin:description" content={socialDescription} />
    
    <!-- Additional head elements -->
    <slot name="head" />
  </head>
  <body class="h-full bg-white dark:bg-gray-900 text-gray-900 dark:text-white">
    <div class="flex flex-col min-h-screen">
      <header class="bg-white dark:bg-gray-900 shadow-sm border-b border-gray-200 dark:border-gray-800">
        <div class="container mx-auto py-4 px-4 flex justify-between items-center">
          <a href="/" class="text-xl font-bold text-blue-600">X about Y</a>
          <nav>
            <ul class="flex space-x-6">
              <li><a href="/" class="hover:text-blue-600 transition-colors">Home</a></li>
              <li><a href="/about" class="hover:text-blue-600 transition-colors">About</a></li>
              <li><a href="/contribute" class="hover:text-blue-600 transition-colors">Contribute</a></li>
            </ul>
          </nav>
        </div>
      </header>
      
      <main class="flex-grow container mx-auto px-4 py-8">
        <slot />
      </main>
      
      <footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 py-6">
        <div class="container mx-auto px-4 text-center text-sm text-gray-500 dark:text-gray-400">
          <p>X about Y | Made for harmless fun | Not affiliated with LinkedIn</p>
          <p class="mt-2">
            <a href="https://github.com/your-username/x-about-y" class="text-blue-600 hover:underline">GitHub</a>
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
